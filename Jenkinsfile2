node{

    @NonCPS
    def getSqlInstance() {
     
        def sql = Sql.newInstance(
            "jdbc:mysql://localhost:3306/jmeter",
            "root",
            "Performance\$123",
            "com.mysql.jdbc.Driver"
        )

        return sql
    }

    echo "Connect to database..."
    def sql = getSqlInstance()

    stage('Ensure emts table exists'){
        echo "Execute create table if not exists..."
        sql.execute '''
            show databases;
            )
        '''
    }

    sql.close()
}
